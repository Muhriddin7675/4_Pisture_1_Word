<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.presentation.Finish">

    <ImageView
        android:id="@+id/starst"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:elevation="150dp"
        android:src="@drawable/ic_starts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cup"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:elevation="150dp"
        android:src="@drawable/ic_cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        app:layout_constraintVertical_bias="0"
        android:text="@string/you_win_the_game"
        android:fontFamily="@font/my_font2"
        android:textColor="#EFB010"
        app:layout_constraintBottom_toTopOf="@id/image_card"
        app:layout_constraintTop_toBottomOf="@id/cup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toTopOf="@id/menu"
        app:layout_constraintEnd_toEndOf="@id/menu"
        app:layout_constraintStart_toStartOf="@id/menu"
        app:layout_constraintTop_toBottomOf="@id/cup">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/word" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_button"
        android:fontFamily="@font/my_font2"
        android:padding="16dp"
        android:text="@string/finish_game2"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#fff" />

